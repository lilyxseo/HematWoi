<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_budget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget_card"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_budget_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oktober 2024"
            android:textColor="@color/widget_text_primary"
            android:textStyle="bold"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_budget_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Budget: —"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_budget_spent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Expense: —"
            android:textColor="@color/widget_text_primary"
            android:textSize="20sp"
            android:typeface="monospace"
            android:maxLines="1"
            android:ellipsize="end" />

        <ProgressBar
            android:id="@+id/widget_budget_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:progressDrawable="@drawable/widget_progress_primary"
            android:max="1000"
            android:minHeight="8dp"
            android:maxHeight="8dp"
            android:indeterminate="false"
            android:progress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/widget_budget_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widget_badge"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Sisa 0%"
                android:textColor="@color/widget_text_primary"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_budget_remaining_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Sisa: —"
                android:textColor="@color/widget_text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
