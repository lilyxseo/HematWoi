<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_stats_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget_card"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_stats_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oktober 2024"
            android:textColor="@color/widget_text_primary"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/widget_stats_income_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income: —"
                    android:textColor="@color/widget_income"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/widget_stats_expense_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense: —"
                    android:textColor="@color/widget_expense"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/widget_stats_net_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net: —"
                    android:textColor="@color/widget_net"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_5"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_6"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/widget_stats_bar_7"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:progressDrawable="@drawable/widget_progress_stats"
                    android:max="1000"
                    android:progress="0"
                    android:rotation="270" />

                <TextView
                    android:id="@+id/widget_stats_bar_label_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
